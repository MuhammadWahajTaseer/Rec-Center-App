<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fitness_hours"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannahrueb.reccenter.FitnessHours"
    android:orientation="vertical">

    <TextView
        android:text="Regular Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textView">

        <TextView
            android:gravity="end"
            android:layout_weight=".6"
            android:text="Monday:\nTuesday:\nWednesday:\nThursday:\nFriday\nSaturday:\nSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:textColor="#000000"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <TextView
            android:layout_weight=".6"
            android:text="6:00am - 10:30pm\n6:00am - 10:30pm\n6:00am - 10:30pm\n6:00am - 10:30pm\n6:00am - 9:30pm\n8:00am - 8:30pm\n8:00am - 8:30pm\n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>

    </LinearLayout>



    <TextView
        android:text="Holiday Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewHoliday"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textViewHoliday">

        <TextView
            android:gravity="end"
            android:layout_weight=".6"
            android:text="September 5: \nOctober 10:\nNovember 11\nDec 24:\nDec 27 - 30:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/textViewHoliday2"
            android:layout_below="@+id/textView"
            android:textColor="#000000"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <TextView
            android:layout_weight=".6"
            android:text="10:00am - 5:30pm\n6:00am - 10:30pm\n6:00am - 10:30pm\n6:00am - 10:30pm\n6:00am - 9:30pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/textViewHoliday3"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>



    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:text="Closed on Dec 25, 26, 31, and Jan 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textViewHoliday4"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

</LinearLayout>
